<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img class="pop-corn" src="https://st2.depositphotos.com/1001335/11322/i/950/depositphotos_113225976-stock-photo-the-film-reel-and-popcorn.jpg" />
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t3.ftcdn.net/jpg/00/77/68/38/360_F_77683876_PLF17M0IBi56nktgKNATVfOCEgqWFPBU.jpg);">
  <div class="container">
    <h1>Save your favourite movies here!!</h1>
  </div>
</div>

<div class="movie-list">
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <% if movie.poster_url.present? %>
        <%= image_tag(movie.poster_url, alt: movie.title, style: "width: 100px; height: auto; border-radius: 4px;") %>
      <% end %>
      <h2><%= movie.title %></h2>
      <p><%= truncate(movie.overview, length: 100) %></p>
      <p>Rating : <%= movie.rating %>/10</p>
    </div>
  <% end %>
</div>



<h1>lists</h1>
<div class="list-container">
  <ul class="list-grid">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <li class="list-item">
        <%= list.name %>
          <%= link_to list_path(list), class: "card-title" do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key) %>')">
            </div>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
