
<div class="list-container">
  <div class="list-grid">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="list-item">
          <div class="flip-card">
            <div class="flip-card-inner">
              <!-- Front of the card -->
              <div class="flip-card-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key) %>')">
              </div>
              <!-- Back of the card -->
              <div class="flip-card-back">
                <h3><%= list.name %></h3>
                <p><%= list.description %></p>
                <%= link_to list_path(list), class: "view-list-btn" do %>
                  <i class="fa-solid fa-eye"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= link_to new_list_path, class: "btn-create-list" do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</div>
